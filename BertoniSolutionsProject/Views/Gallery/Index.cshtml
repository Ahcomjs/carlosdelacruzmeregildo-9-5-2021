@model IEnumerable<BertoniSolutionsProject.ViewModels.AlbumVM>

@{ ViewData["Title"] = "Albums"; }

<div class="container">
    <h1>Albums</h1>

    <div class="container mt-5">
        <ul class="list-group">
            @foreach (var item in Model)
            {
                <li class="list-group-item w-100 d-flex" style="margin-top:2px;">
                    <span class="col-md-1 text-muted">@Html.DisplayFor(items => item.Id)</span>
                    <b class="col-md-8">@Html.DisplayFor(items => item.Title)</b>
                    <a href="@Url.Action("Photos", "Gallery", new {  id=item.Id })" class="btn btn-primary ml-auto" style="background-color:#333 !important;">View Album</a>
                </li>

            }
        </ul>
    </div>
</div>